# Windows etc
# color defines for zenburn styled i3
set $bg     #2c2c2e
set $fg     #0b1c2c
set $hi     #efef8f
set $ac     #a0afa0
set $tx     #ffffff
set $ia     #8f8f8f
set $be     #8faf9f
set $yw     #ccdc90
set $gn     #88b090
set $rd     #e89393

# set some nice colors      border     background  text
client.focused              $fg        $fg	   $tx   
client.unfocused            $fg        $fg         $ia
client.focused_inactive     $fg        $fg         $ac
client.urgent               $rd        $rd         $tx


